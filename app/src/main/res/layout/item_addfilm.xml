<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/button">
    <ImageView
        android:layout_width="160dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="190dp"
        android:id="@+id/img_addflim">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/name_addflim"
        android:layout_toRightOf="@+id/img_addflim">

    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa"
        android:id="@+id/edit_addflim"
        android:layout_below="@+id/name_addflim"
        android:layout_toRightOf="@+id/img_addflim"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp">

    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:id="@+id/delete_addflim"
        android:layout_below="@+id/name_addflim"
        android:layout_toRightOf="@+id/edit_addflim"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp">

    </Button>

</RelativeLayout>